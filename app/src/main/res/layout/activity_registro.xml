<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grenn_c"
        android:descendantFocusability="afterDescendants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Formulario de registro" /-->

        <EditText
            android:id="@+id/txtNombres"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_run"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Ingrese sus nombres"
            android:digits="abcdefghijklmnñopqrstuvwxyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>


        <EditText
            android:id="@+id/txtApellidos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/button_run"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Ingrese sus apellidos"
            android:digits="abcdefghijklmnñopqrstuvwxyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZ "
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:radius="12dp"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spopciones"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/spopciones"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/button_run" />

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_run"
            android:digits="1234567890 +-()"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingrese un número de telefono"
            android:inputType="phone"
            android:maxLength="13" />

        <TextView
            android:id="@+id/txtfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="245sp"
            android:text="Fecha de nacimiento" />

        <Button
            android:id="@+id/btnfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="275sp"
            android:text="Fecha" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="272dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </LinearLayout>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="332dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_run"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingrese un email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="392dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_run"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingrese una contraseña"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registrar"
                android:textSize="10sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Extraer Datos"
                android:textSize="10sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textSize="10sp" />

        </LinearLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>